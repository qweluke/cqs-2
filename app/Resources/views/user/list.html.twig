{% extends 'base.html.twig' %}

{% block body %}

    <div class="row row-offcanvas row-offcanvas-right">

        <div class="col-xs-12 col-sm-9">
            <p class="pull-right visible-xs">
                <button type="button" class="btn btn-primary btn-xs" data-toggle="offcanvas">Toggle nav</button>
            </p>
            <div class="jumbotron">
                <h1>Hello, world!</h1>
                <p>Below you can find our users. You can also <a href="{{ path('app_admin_user_index') }}">add</a>
                    new one!</p>
            </div>
            <div class="row">

                <div class="col-md-12">
                    <div class="thumbnail">
                        <table class="table">
                            <thead>
                            <tr>
                                <th>Username</th>
                                <th>First name</th>
                                <th>Last Name</th>
                                <th>Address</th>
                                <th>
                                    <div class="pull-right">
                                        <a class="btn btn-xs btn-success" href="{{ path('app_admin_user_index') }}">new
                                            user</a>
                                    </div>
                                </th>
                            </tr>
                            </thead>
                            {% for user in users %}
                                <tr>
                                    <td>{{ user.username }}</td>
                                    <td>{{ user.name }}</td>
                                    <td>{{ user.surname }}</td>
                                    <td>{{ user.fullAddress|nl2br }}</td>
                                    <td>
                                        <a class="btn btn-danger btn-xs" href="{{ path('app_admin_user_delete', {'id': user.id}) }}">delete</a>
                                        <a class="btn btn-warning btn-xs" href="{{ path('app_admin_user_edit', {'id': user.id}) }}">edit</a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="5" class="text-center"><strong>No users yet!</strong></td>
                                </tr>
                            {% endfor %}
                        </table>

                    </div>
                </div>


            </div><!--/row-->

        </div><!--/.col-xs-12.col-sm-9-->

        <div class="col-xs-6 col-sm-3 sidebar-offcanvas" id="sidebar">
            <div class="list-group">
                <a href="#" class="list-group-item active">Link</a>
                <a href="#" class="list-group-item">Link</a>
                <a href="#" class="list-group-item">Link</a>
                <a href="#" class="list-group-item">Link</a>
                <a href="#" class="list-group-item">Link</a>
                <a href="#" class="list-group-item">Link</a>
                <a href="#" class="list-group-item">Link</a>
                <a href="#" class="list-group-item">Link</a>
                <a href="#" class="list-group-item">Link</a>
                <a href="#" class="list-group-item">Link</a>
            </div>
        </div><!--/.sidebar-offcanvas-->
    </div><!--/row-->

{% endblock %}

